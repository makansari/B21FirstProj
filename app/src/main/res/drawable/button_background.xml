<?xml version="1.0" encoding="UTF-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
<shape>


    <stroke
        android:width="1dp"
        android:color="#da2414"/>
    <corners
        android:radius="7dp" />

    <padding
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp"/>



</shape>


<item
    android:state_enabled="false"
    android:drawable="@color/colour_pink" />
<item
    android:state_pressed="true"
    android:state_enabled="true"
    android:drawable="@color/colour_yellow" />
<item
    android:state_focused="true"
    android:state_enabled="true"
    android:drawable="@color/colour_green" />
<item
    android:state_enabled="true"
    android:drawable="@color/colour_red" />
</selector>